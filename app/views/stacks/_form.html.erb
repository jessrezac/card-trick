<%= form_with(model: @stack) do |f| %>

    <div class="field">
        <%= f.label :title, class: "label" %>
        <p class="control">
            <%= f.text_field :title, class: "input" %>
        </p>
    </div>

    <div class="field">
        <%= f.label :thumbnail, class: "label" %>
        <p class="control">
            <%= f.file_field :thumbnail, accept: "image/png,image/jpeg", class: "input" %>
        </p>
    </div>

    <h2 class="subtitle is-2">Cards</h2>

    <%= f.fields_for :cards do |card| %>
        <%= card.label :front_content %>
        <%= card.text_field :front_content %><br>
    <% end %>

    <div class="field">
        <p class="control">
            <%= f.submit class: "button is-primary"  %>
        </p>
    </div>

<% end %>