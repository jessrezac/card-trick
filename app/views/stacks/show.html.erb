<section class="section">
    <div class="container">
        <h1 class="title is-1"><%= @stack.title %></h1>
        <p class="subtitle is-2 is-italic"><%= @stack.cards.count %> cards</p>
        <div class="tile is-ancestor"> 
            
            <% @stack.cards.each_with_index do |card, i| %>
                <div class="tile is-parent is-4">
                    <div class="tile is-child box has-text-centered">
                        <p class="title is-4"><%= link_to card.front_content, stack_card_path(@stack, card) %></p>
                    </div>
                </div>

                <% if (i+1) % 3 == 0 %>
                    </div>
                    <div class="tile is-ancestor">
                <% elsif i == @stack.cards.length-1 %>
                    </div>
                <% end %>
            <% end %>

        
        <div class="buttons">
            <%= link_to "Edit Stack", edit_stack_path(@stack), class: "button is-outlined is-primary" %>
            <%= button_to "Delete Stack", stack_path(@stack), method: "delete", class: "button is-secondary"%>
        </div>

    </div>
</section>