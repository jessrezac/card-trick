    <article class="message is-danger">
        <div class="message-header">
            <p><%= pluralize(record.errors.count, "error") %></p>
        </div>
        <div class="message-body">
            <% record.errors.full_messages.each do |msg| %>
                <p><%= msg %>.</p>
            <% end %>
        </div>
    </article>